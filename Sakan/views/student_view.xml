<odoo>


    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">student view tree</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <tree class="header_custom">
                <field name="name"/>
                <field name="email"/>
                <field name="father_name"/>
                <field name="last_name"/>
                <field name="phone"/>
                <field name="section"/>
                <field name="unit"/>
                <field name="room"/>
                <field name="university"/>
            </tree>
        </field>
    </record>

    =
    <record id="student_view_form" model="ir.ui.view">
        <field name="name">student view form</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>

                        <group string="المعلومات الشخصية">
                            <field name="email"/>
                            <field name="father_name"/>
                            <field name="last_name"/>
                            <field name="birthday"/>
                            <field name="phone"/>
                            <field name="city"/>
                        </group>

                        <group string="المعلومات الجامعية">
                            <field name="section"/>
                            <field name="unit"/>
                            <field name="room"/>
                            <field name="room_floor"/>
                            <field name="active"/>
                            <field name="university"/>
                        </group>

                    </group>
                    <notebook>
                        <page string="Specialization">
                            <field name="StudentStudy_ids">
                                <tree>
                                    <field name="College"/>
                                    <field name="Specialization"/>
                                </tree>
                            </field>

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="student_view_search" model="ir.ui.view">
        <field name="name">student view search</field>
        <field name="model">student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="phone"/>

                <filter name="group_unit" string="Unit" context="{'group_by':'unit'}"/>
                <filter name="group_university" string="University" context="{'group_by':'university'}"/>
                <filter name="group_room" string="Room" context="{'group_by':'room'}"/>
            </search>
        </field>
    </record>


    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">student</field>
    </record>


    <menuitem
            id="student_menu_item"
            name="Show Student"
            parent="student_menu"
            action="student_action"
    />


</odoo>