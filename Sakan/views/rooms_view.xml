<odoo>


    <record id="rooms_view_tree" model="ir.ui.view">
        <field name="name">rooms view tree</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="floor"/>
                <field name="state"/>
                <field name="unit"/>
                <field name="student_count"/>
            </tree>
        </field>
    </record>

    =
    <record id="rooms_view_form" model="ir.ui.view">
        <field name="name">rooms view form</field>
        <field name="model">rooms</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <field name="state" widget="statusbar" />
                    </header>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="floor"/>
                        <field name="unit"/>
                    </group>
                    <group>
                        <field name="student_count"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="rooms_action" model="ir.actions.act_window">
        <field name="name">الغرف</field>
        <field name="res_model">rooms</field>
    </record>


    <menuitem
            id="rooms_menu_item"
            name="عرض الغرف"
            parent="room_menu"
            action="rooms_action"
    />


</odoo>