<odoo>


    <record id="unit_view_tree" model="ir.ui.view">
        <field name="name">unit view tree</field>
        <field name="model">unit</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="type"/>
                <field name="university" />
            </tree>
        </field>
    </record>

=
    <record id="unit_view_form" model="ir.ui.view">
        <field name="name">unit view form</field>
        <field name="model">unit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="معلومات الوحدة">
                            <field name="type"/>
                            <field name="university"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>



    <record id="unit_action" model="ir.actions.act_window">
            <field name="name">Units</field>
            <field name="res_model">unit</field>
    </record>


    <menuitem
        id="unit_menu_item"
        name="Show Units"
        parent="unit_menu"
        action="unit_action"
    />


</odoo>